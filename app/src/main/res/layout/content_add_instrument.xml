<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/view_white"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".admin.AddInstrumentActivity">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Company Name"
        android:textColorHint="@color/view_black">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Department"
        android:textColorHint="@color/view_black">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/editTextInstrumentType"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent"
        android:focusable="true"
        android:layout_marginTop="20dp"
        android:hint="Instrument Type"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/view_black">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize ="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/editTextInstrumentId"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginTop="20dp"
        android:hint="Instrument Id"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/view_black">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize ="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/amcFromdate"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:hint="AMC from date"
            android:focusableInTouchMode="true"
            android:ems="10"
            android:inputType="date"
            android:editable="false"
            android:textColorHint="@color/view_black"
            android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
            android:textSize ="20sp"/>
       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:hint="AMC to date"
            android:focusableInTouchMode="true"
            android:id="@+id/amcTodate"
            android:textColorHint="@color/view_black"
            android:ems="10"
            android:inputType="date"
            android:editable="false"
            android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
            android:textSize ="20sp"/>

    <Button
        android:id="@+id/addInstrument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Instrument"
        android:textColor="@color/view_white"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/drawable_rounded" />

</LinearLayout>
