<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminDashboard">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/view_white"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:padding="30dp"
            tools:context=".admin.AdminDashboard">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Company"
            android:layout_gravity="left"
            android:textColor="@color/view_black"
            android:padding = "10dp"
            android:textSize="20sp"
            android:gravity="top">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/drawable_rectangle"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginBottom="10dp"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/view_black">
            <Spinner
                android:id="@+id/company"
                style="@style/SpinnerCustomTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Type"
                android:layout_gravity="left"
                android:textColor="@color/view_black"
                android:padding = "10dp"
                android:textSize="20sp"
                android:gravity="top">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/drawable_rectangle"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/view_black">
                <Spinner
                    android:id="@+id/type"
                    style="@style/SpinnerCustomTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Engineer"
                android:layout_gravity="left"
                android:textColor="@color/view_black"
                android:padding = "10dp"
                android:textSize="20sp"
                android:gravity="top">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/drawable_rectangle"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/view_black">
                <Spinner
                    android:id="@+id/engineer"
                    style="@style/SpinnerCustomTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Call Status"
                android:layout_gravity="left"
                android:textColor="@color/view_black"
                android:padding = "10dp"
                android:textSize="20sp"
                android:gravity="top">
            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/drawable_rectangle"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/view_black">
                <Spinner
                    android:id="@+id/callStatus"
                    style="@style/SpinnerCustomTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/fromActivity"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginTop="20dp"
                android:hint="From Scheduled Date"
                android:focusableInTouchMode="true"
                android:ems="10"
                android:inputType="date"
                android:editable="false"
                android:textColorHint="@color/view_black"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:textSize ="20sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginTop="20dp"
                android:hint="To Scheduled Date"
                android:focusableInTouchMode="true"
                android:id="@+id/toActivity"
                android:textColorHint="@color/view_black"
                android:ems="10"
                android:inputType="date"
                android:editable="false"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:textSize ="20sp"/>
            <Button
                android:id="@+id/dashboardResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/drawable_rounded"
                android:text="Result"
                android:textColor="@color/view_white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultText"
                android:textColor="@color/view_black"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="50px"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>