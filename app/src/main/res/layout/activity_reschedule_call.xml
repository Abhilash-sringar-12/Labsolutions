<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workadmin.RescheduleCall">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/view_white"
    android:layout_marginTop="70dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/reScheduleDate"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:hint="Reschedule Date"
            android:focusableInTouchMode="true"
            android:ems="10"
            android:inputType="date"
            android:editable="false"
            android:textColorHint="@color/view_black"
            android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
            android:textSize ="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:hint="Reschedule Time"
            android:focusableInTouchMode="true"
            android:id="@+id/reScheduleTime"
            android:textColorHint="@color/view_black"
            android:ems="10"
            android:inputType="date"
            android:editable="false"
            android:drawableEnd="@drawable/ic_baseline_timer_24"
            android:textSize ="20sp"/>

        <Button
            android:id="@+id/reScheduleCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reschedule"
            android:textColor="@color/view_white"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:background="@drawable/drawable_rounded" />
</LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>