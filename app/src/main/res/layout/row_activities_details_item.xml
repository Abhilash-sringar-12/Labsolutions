<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/activityInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instrumene:Gs232323 Name: Abhilash "
        android:layout_marginRight="5dp"
        android:textColor="@color/view_black"
        android:textStyle="bold|italic"
        android:gravity="left"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/activityDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="0"
        android:gravity="left"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:text="Aug 12 2020 07:56:20"
        android:textColor="@color/view_black"
        android:textSize="12dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/mail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_baseline_mail_24" />

    <Button
        android:id="@+id/phone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_baseline_local_phone_24" />

</GridLayout>
